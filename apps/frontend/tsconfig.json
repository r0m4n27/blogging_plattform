{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      // storybook breaks vue when used with typescript stories
      // https://github.com/johnsoncodehk/volar/discussions/592
      "react": [
        "./stub"
      ]
    },
    "lib": [
      "ES2017"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
